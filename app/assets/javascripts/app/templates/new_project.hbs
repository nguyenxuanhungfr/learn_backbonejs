<form action="/projects" id="new_project" method="post">
  <fieldset>
    <legend>New Project</legend>
    <div class="form-group control-group alert">
      <label for="name" class="control-label">Project name</label>
      <div class="controls">
        <input type="text" name="name" value="{{ name }}" id="name" placeholder="Project name">
        <span class="help-inline"></span>
      </div>
    </div>
    <div class="form-group control-group">
      <label for="description" class="control-label">Description</label>
      <div class="controls">
        <textarea name="description" id="description" cols="30" rows="5">{{ description }}</textarea>
      </div>
    </div>
    <br>
    <button type="submit" class="btn btn_submit">Submit</button>
  </fieldset>
</form>
